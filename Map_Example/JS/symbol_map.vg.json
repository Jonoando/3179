{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 880,
  "height": 520,
  "title": "Australian Wine Producers by State (select year)",
  "projection": {"type": "equalEarth"},
  "params": [
    {
      "name": "year_select",
      "value": 2024,
      "bind": {"input": "range", "min": 2020, "max": 2024, "step": 1}
    }
  ],
  "layer": [
    {
      "data": {
        "url": "js/AustralianMapWithGraticules.topojson",
        "format": { "type": "topojson", "feature": "ne_50m_admin_1_states_provinces" }
      },
      "transform": [
        { "calculate": "datum.properties.name", "as": "state" },
        {
          "lookup": "state",
          "from": {
            "data": { "url": "data/producers_by_state_year.csv" },
            "key": "state",
            "fields": ["year", "value"]
          }
        },
        { "filter": "datum.year == year_select" }
      ],
      "mark": { "type": "geoshape", "stroke": "white" },
      "encoding": {
        "color": {
          "field": "value",
          "type": "quantitative",
          "title": "Producers",
          "scale": { "scheme": "blues" }
        },
        "tooltip": [
          { "field": "state", "type": "nominal", "title": "State" },
          { "field": "year", "type": "quantitative" },
          { "field": "value", "type": "quantitative", "title": "Producers" }
        ]
      }
    },
    {
      "data": {
        "url": "js/AustralianMapWithGraticules.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_5" }
      },
      "mark": { "type": "geoshape", "fill": null, "stroke": "#d3d3d3", "strokeWidth": 0.5 }
    }
  ],
  "config": {
    "view": { "stroke": null },
    "axis": { "labelFontSize": 12, "titleFontSize": 12 },
    "legend": { "titleFontSize": 12, "labelFontSize": 12 }
  }
}
