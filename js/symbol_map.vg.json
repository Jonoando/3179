{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Wine Producers by State (1991â€“2024)",
  "autosize": { "type": "fit", "contains": "padding" },
  "width": "container",
  "height": 520,
  "projection": { "type": "mercator" },
  "params": [
    {
      "name": "year_select",
      "value": 2024,
      "bind": { "input": "range", "name": "Year Selection Slider: ", "min": 1991, "max": 2024, "step": 1 }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "js/AustralianMapWithGraticules.topojson",
        "format": { "type": "topojson", "feature": "ne_50m_admin_1_states_provinces" }
      },
      "transform": [
        { "calculate": "datum.properties.name", "as": "state" },
        { "calculate": "datum.state + '_' + toString(year_select)", "as": "key" },
        {
          "lookup": "key",
          "from": {
            "data": {
              "url": "data/producers_by_state_year.csv",
              "format": { "type": "csv", "parse": { "value": "number" } }
            },
            "key": "key",
            "fields": ["value"]
          }
        }
      ],
      "mark": { "type": "geoshape", "stroke": "white" },
      "encoding": {
        "color": {
          "field": "value",
          "type": "quantitative",
          "title": "Producers",
          "scale": { "scheme": "blues", "clamp": true }
        },
        "tooltip": [
          { "field": "state", "type": "nominal", "title": "State" },
          { "field": "value", "type": "quantitative", "title": "Producers" }
        ]
      }
    },
    {
      "data": {
        "url": "js/AustralianMapWithGraticules.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_5" }
      },
      "mark": { "type": "geoshape", "fill": null, "stroke": "#d3d3d3", "strokeWidth": 0.5 }
    }
  ],
  "config": {
    "title": { "fontSize": 18, "fontWeight": "bold", "anchor": "middle" },
    "view": { "stroke": null },
    "axis": { "labelFontSize": 12, "titleFontSize": 12 },
    "legend": { "titleFontSize": 12, "labelFontSize": 12 }
  }
}
